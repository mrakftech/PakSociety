@model dynamic
@using Society.Data
@{
    ViewBag.Title = "View";
}
@if (Session["CNIC"] == null || Session["type"].ToString() == "Employee" || ViewBag.Key==false) { Response.Redirect("/Login/Login"); }
else
{
    <div class="content-wrapper">
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Loan Installment Detail</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active">Loan Installment Detail</li>
                        </ol>
                    </div>
                </div>
            </div>
        </section>



        <section class="content">




            <div class="col-md-12">

                <div class="card">

                    <div class="card-body">


                        <div class="form-group col-3 float-left">
                            <label for="inputName">LOAN ID</label><br />
                            @Model.data.Loan_ID
                        </div>
                        <div class="form-group col-3 float-left">
                            <label for="inputName">NO OF INSTALLMENT</label><br />
                            @Model.data.No_Of_Installments
                        </div>

                        <div class="form-group col-3 float-left">
                            <label for="inputName">LOAN AMOUNT</label><br /> @Model.data.Loan_Amount
                        </div>
                        <div class="form-group col-3 float-left">
                            <label for="inputName">SINGLE INSTALLMENT</label><br />@Model.data.Single_Installment_Amount
                        </div>

                        <div class="form-group col-3 float-left">
                            <label for="inputName">EMPLOYEE NAME</label><br /> @Model.data.Employee.F_Name @Model.data.Employee.L_Name
                        </div>
                        <div class="form-group col-3 float-left">
                            <label for="inputName">EMPLOYEE CNIC</label><br />  @Model.data.Employee.CNIC
                        </div>

                        <div class="form-group col-3 float-left">
                            <label for="inputName">PHONE NUMBER</label><br /> @Model.data.Employee.Phone_Number
                        </div>

                    </div>
                </div>


                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Installments</h3>
                    </div><div class="card-body p-0">
                        <table class="table table-striped projects" id="example1">
                            <thead>
                                <tr>

                                    <th>Installment</th>
                                    <th>Amount</th>

                                    <th>Payment Date</th>


                                    <th>IsPaid</th>

                                </tr>
                            </thead>
                            <tbody>



                                @foreach (Loan_Installments i in Model.list)
                                {

                                    <tr>
                                        <td>@i.Installment_Number</td>
                                        <td>@i.Amount</td>
                                        <td>@i.Payment_Month.ToString("dd-MM-yyyy")</td>




                                        @if (i.IsPaid == "Paid")
                                        {


                                            <td><span class="btn-success btn-sm"><i class="fa fa-check"></i></span></td>

                                        }
                                        else
                                        {
                                            <td><span class="btn-danger btn-sm"><i class="fa fa-times"></i></span></td>

                                        }
                                    </tr>
                                }





                            </tbody>
                        </table>

                    </div>
                </div>

            </div>



        </section>

    </div>}

