@model Society.Data.Payment_Plan
@{
    ViewBag.Title = "print";
    Layout = null;
}
@if (Session["CNIC"] == null || Session["type"].ToString() == "Employee" || ViewBag.Key == false) { Response.Redirect("/Login/Login"); }
else
{
    <html lang="en">
    <head runat="server">
        <asp:ContentPlaceHolder ID="head" runat="server">
        </asp:ContentPlaceHolder>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Lake View Heights</title>
        <!-- Google Font: Source Sans Pro -->
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
        <!-- Font Awesome -->
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
        <!-- Font Awesome Icons -->
        <link href="~/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
        <link href="~/plugins/datatables-responsive/css/responsive.bootstrap4.min.css" rel="stylesheet" />
        <link href="~/plugins/datatables-buttons/css/buttons.bootstrap4.min.css" rel="stylesheet" />
        <link href="~/plugins/fontawesome-free/css/all.min.css" rel="stylesheet" />
        <link href="https://npm-assets.fiverrcdn.com/assets/uploads/domaine-display.css" rel="stylesheet" type="text/css">
        <link href="~/plugins/fiverr1.css" rel="stylesheet" />
        <link href="~/plugins/overlayScrollbars/css/OverlayScrollbars.min.css" rel="stylesheet" />
        <script type="text/javascript" src="~/plugins/jquery/jspdf.min.js"></script>
        <script src="~/plugins/jquery/jQuery.print.js"></script>
        <script src="~/plugins/jquery/jquery.min.js"></script>
        <script src="~/plugins/bootstrap/js/bootstrap.min.js"></script>
        <!-- Theme style -->
        <link href="~/dist/css/adminlte.min.css" rel="stylesheet" />
        <script src="~/alert.js" type="text/javascript"></script>
        <link href="~/plugins/boot.min.css" rel="stylesheet" />
    </head>
    <body>
        <div class="d-flex justify-content-center">
            
            <div style="width: 100%;  border-block-color: black; border-width: unset; margin: auto; padding: 10px; ">
                <div style="margin-top:45px;float:left">
                    <img height="120" width="180" src="~/images/logo/Lake View Heights Logo-01.png" style="float: left;  font-family: 'Century Gothic';" />
                    @*<img height="120" width="180" src="~/NPF2.png" style="float: left;font-family: 'Century Gothic';border-radius:10px" />*@

                </div>

                <div class="row d-flex  mt-5">

                    <b style="font-family: 'Arial'; margin-top: 140.6px;font-size:20px ">
                        INTIMATION LETTER
                    </b>
                </div>
                <style>
                    .image-preview {
                        margin-right: 50px;
                        width: 140px;
                        height: 180px;
                        border: 2px solid #ccc;
                        border-radius: 4px;
                        display: flex;
                        justify-content: center;
                        align-items: center;
                        overflow: hidden;
                        float: right;
                        margin-top: -49px;
                    }

                        .image-preview img {
                            width: 100%;
                            height: 100%;
                            object-fit: unset;
                        }
                </style> <div class="image-preview">
                    @if (Model.Plot.Member.Profile_Img != null)
                    {
                        <img class="preview-image" id="imagePreview" src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Plot.Member.Profile_Img))" />
                    }
                </div>
                <div style="margin-top:130px">

                    <div class="row" style=" font-family: 'Arial'; font-size: 20px ;margin-left:40px;">
                        <div style="font-size: 20px; min-width: 145px">REFERENCE #.</div>
                        <div class="col-3" style="font-weight: 700; padding-left: 20px; font-size: 18px">
                            @Model.Plot.Reg_No
                        </div>
                        <div style="font-size: 20px; margin-left: 95px; min-width: 160px">APPLICATION #.</div>
                        <div class="col-2" style="font-weight: 700; padding-left: 20px; font-size: 18px">
                            @Model.Plot.Qm_No
                        </div>
                    </div>
                    <div class="row ml-0">

                    </div>
                    <br />
                    <div class="row" style=" font-family: 'Arial'; font-size: 20px ;margin-left:40px;">
                        <div style="font-size: 20px; min-width: 145px">MR./MRS./MS.</div>
                        <div class="col-3" style="font-weight: 700; padding-left: 20px; font-size: 18px ">
                            @Model.Plot.Member.Applicant_Name.ToUpper()
                        </div>
                        <div style="font-size: 20px; margin-left: 45px; min-width: 160px">
                            @if (Model.Plot.Member.Father_Husband_Start_Text == "W/O")
                            {<span>HUSBAND NAME.</span>}
                            else
                            {<span>FATHER NAME.</span>}
                        </div>
                        <div class="col-4" style="font-weight: 700; padding-left: 20px; font-size: 18px ">
                            @Model.Plot.Member.Father_Husband_Name.ToUpper()

                        </div>
                    </div><br />

                    <div class="row" style=" font-family: 'Arial'; font-size: 20px ;margin-left:40px;">
                        <div style="font-size: 20px; min-width: 145px">CNIC #.</div>
                        <div class="col-3" style="font-weight: 700; padding-left: 20px; font-size: 18px">
                            @Model.Plot.Member.CNIC
                        </div>
                        <div style="font-size: 20px; margin-left: 45px; min-width: 160px">CELL#</div>
                        <div class="col-4" style="font-weight: 700; padding-left: 20px; font-size: 18px ">
                            @Model.Plot.Member.Office_No @if (@Model.Plot.Member.Cell_No != null)
                            {<span>, @Model.Plot.Member.Cell_No</span>}
                        </div>
                    </div><br />



                    <div class="row" style=" font-family: 'Arial'; font-size: 20px ;margin-left:40px;">
                        <div style="font-size: 20px; min-width: 145px">MEMBERSHIP #.</div>
                        <div class="col-3" style="font-weight: 700; padding-left: 20px; margin-left: 34px; font-size: 18px">
                            @Model.Plot.Member.MemberShipNumber
                        </div>
                        <div style="font-size: 20px; min-width: 145px">UNIT SIZE</div>

                        <div class="col-4" style="font-weight: 700; padding-left: 20px;  font-size: 18px; text-transform: uppercase">
                            @*@Model.Plot.Installment_Plan.Size @if (Model.Plot.Installment_Plan.Scheme == false)
        {

            <span>(GENERAL BLOCK)</span>}
        else
        { <span>(EXECUTIVE BLOCK)</span>}*@
                            @Model.Plot.newPlot.wide
                        </div>
                    </div><br />

                    <div class="row" style=" font-family: 'Arial'; font-size: 20px ;margin-left:40px;">
                        <div style="font-size: 20px; min-width: 145px">ADDRESS</div>
                        <div class="col-10" style="font-weight: 700; padding-left: 20px; font-size: 18px ;text-transform:uppercase">
                            @Model.Plot.Member.Permenent_Postel_Address

                        </div>
                    </div><br />
                    <div class="row" style=" font-family: 'Arial'; font-size: 20px ;margin-left:50px;margin-right:0px">
                        <div class="col-12" style="font-weight:700;text-align:center">

                        </div>
                    </div><br />
                    <div id="paragraph" style="font-size: 24px; font-family: 'Arial'; margin-left: 40px; margin-right: 50px !important; margin-top: 50px;text-align:justify;">
                        Reference to your Application No. <span class="col-2" style="font-weight:700;text-align:center">@Model.Plot.Qm_No</span> Dated <span class="col-2" style="font-weight:700;text-align:center">@Model.Plot.Date.ToString("dd-MM-yy")</span> It is being intimated to you with great pleasure that your application has been approved against the above-mentioned booking.
                    </div><br />
                    <div id="paragraph" style="font-size: 24px; font-family: 'Arial'; margin-left: 40px;margin-right:50px;text-align:justify; ">
                        The above-said booking is transferrable upon applicable charges through transfer process. Formal Allotment Letter will be issued at the time of possession upon submission of all the payables and completion of development (Terms & Conditions apply*)
                    </div><br />
                    <br /><br /><br /><br /><div class="row ml-0">
                        <div class="col-7" style="font-weight: 700; font-size: 20px; font-family: 'Arial'; margin-left: 43px;margin-top:50px">
                            Dated ________________
                        </div><div class="col-4" style="font-weight: 700; font-size: 20px; font-family: 'Arial'; margin-left: 43px; margin-top: 50px ">Signature Under Company Seal </div>
                    </div><br /><br />
                    <div class="row">
                        <div class="col-8" style="margin-top: 18px; margin-left: 43px">

                            @if (ViewBag.BarcodeImage != null)
                            {
                                <img style="margin-top:41px" width="170" height="120" src="@ViewBag.barcodeImage" alt="" />
                            }
                        </div>
                        <div class="col-3">
                            @if (ViewBag.qrcodeImage != null)
                            {
                                <img width="230" height="240" src="@ViewBag.qrcodeImage" alt="" />
                            }
                        </div>
                    </div>

                    <div class="col-12" style="font-size: 16px; font-family: 'Arial';">
                        <div class="col-12" style="font-size: 16px; font-family: 'Arial';">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-center">
            <div style="width: 1330px; border-block-color: black; border-width: unset; margin: auto; padding: 10px; margin-left:50px;margin-right:50px ">
                <div style="margin-top:50px;">
                    <div class="d-flex justify-content-center"><h2>TERMS AND CONDITIONS</h2> </div>
                    

                    <ol>
                        <li id="paragraph" class="col-12" style="font-size: 16px; font-family: 'Arial'; text-align:justify">
                            All payments shall be made according to type and features of the property in the booking / sales office of the Lake View Heights
                            Farmhouse., as per schedule of payments through Bank Drafts/Pay Order/Cheque in favour of “Lake View Height”.
                        </li>
                        <li id="paragraph" class="col-12" style="font-size: 16px; font-family: 'Arial'; text-align: justify">
                            The Development Charges and / or Additional Development Charges if imposed, shall be payable as determined by the Management of Lake View Height from time to time even after taking possession. A surcharge @@ 15% per annum or as determined by the Management for each moth
                            of delay shall be levied for the amount in default as per bye laws. However, if any remains in arrears and the payment is not made despite the notice,
                            the Management shall have the right to cancel the intimation letter, resume possession of the plot and forfeit 10% of the price plus any other dues.
                        </li>
                        <li id="paragraph" class="col-12" style="font-size: 16px; font-family: 'Arial'; text-align: justify">
                            After clearing all the dues, demarcation and measurements of the Farm House will be came out in the presence of the allottee / transferee or his
                            representative at the time of handing over the physical possession. In case the total area of the Farm House exceeds the standard allotted size, the
                            cost of such additional area shall be payable by the allottee / transferee, if the measurement is approved at such rates intimated by the Management.
                            The same will be applicable in case of undersize due to location or technical reasons.
                        </li>
                        <li id="paragraph" class="col-12" style="font-size: 16px; font-family: 'Arial'; text-align: justify">
                            A surcharge @@ 5% per month (which is calculated @@ 0.167% daily) for payments received after the due date from the allottee / applicant.
                        </li>
                        <li id="paragraph" class="col-12" style="font-size: 16px; font-family: 'Arial'; text-align: justify">
                            Intimation letter shall be confirmed after clearance of all dues of “Lake View Height” through registry.
                        </li>
                        <li id="paragraph" class="col-12" style="font-size: 16px; font-family: 'Arial'; text-align: justify">
                            In-case the payment plan is not followed and the allottee / applicant is failed to pay installments within 90 days, the provisional allotment shall
                            automatically stand cancelled and 20% of the paid amount of the allottee / applicant shall be forfeited in favor of “Lake View Height” and
                            remaining amount, if any, will be returned to him within a period of 90 days through cheque/pay order.
                        </li>
                        <li id="paragraph" class="col-12" style="font-size: 16px; font-family: 'Arial'; text-align: justify">
                            Commencing from the date of notices given by the developers to allottee that the property is ready for possession, the allottee shall be liable to
                            bear and pay all taxes, remaining dues if any.
                        </li>
                        <li id="paragraph" class="col-12" style="font-size: 16px; font-family: 'Arial'; text-align: justify">
                            The possession of the property will rest with the developer / Management of “Lake View Height” until the allottee / buyer makes full
                            payment then the Management shall issue a proper letter of possession to the allottee / applicant.
                        </li>
                        <li id="paragraph" class="col-12" style="font-size: 16px; font-family: 'Arial'; text-align: justify">
                            After issuance of proper possession letter, the allottee shall be bound to carry on with the construction work within given time by the Management
                            of “Lake View Height” otherwise, his farm house shall be cancelled and after deduction of the development costs and cost of land etc. as
                            settled by the management of “Lake View Height” and the said Farm House shall be alienated by the “Lake View Height” to any
                            other person(s) of its own choice.
                        </li>
                        <li id="paragraph" class="col-12" style="font-size: 16px; font-family: 'Arial'; text-align: justify">
                            Property allotted to an applicant / allottee shall not used for any purpose other than confirming and in case any of the property found in non-confirming use, the applicant / allottee will be responsible to restore its earlier position at his own risks and costs within a period of 60 days, failing which
                            Management “NPF Cighu Agro Farmhouse” shall have the right to seize / cancel the same and to dispose of the property accordingly.
                        </li>
                        <li id="paragraph" class="col-12" style="font-size: 16px; font-family: 'Arial'; text-align: justify">
                            A transfer fee will be applicable upon transfer of property and will be calculated according to measurement and specification of property which
                            shall be paid by the allottee / applicant from his own means.
                        </li>
                        <li id="paragraph" class="col-12" style="font-size: 16px; font-family: 'Arial'; text-align: justify">
                            Allottee / applicant in possession will bear the expenses of all civic facilities availed in the future with the condition of change of rates as and when
                            required.
                        </li>
                        <li id="paragraph" class="col-12" style="font-size: 16px; font-family: 'Arial'; text-align: justify">
                            Apart from the price of property, the allottee / applicant will also pay documentation charges for leases, connections and meter charges of electricity, water and gas.
                        </li>
                        <li id="paragraph" class="col-12" style="font-size: 16px; font-family: 'Arial'; text-align: justify">
                            Final letter of allotment will be issued on receipt of total payment and fulfillment of the aforementioned terms and conditions. Whereas, Measurement, number and location of farm house(s) is subject to survey and final approvals by the competent authority, if there is any difference, same would
                            be adjusted accordingly.
                        </li>
                        <li id="paragraph" class="col-12" style="font-size: 16px; font-family: 'Arial'; text-align: justify">
                            Only 25% of the area of Farmhouse can be utilized for construction purposes, rest of the area must be left for gardening, farming or green lawn.
                        </li>
                        <li id="paragraph" class="col-12" style="font-size: 16px; font-family: 'Arial'; text-align: justify">
                            All construction activities within the plot must be environment friendly subject to approval of map from the “Lake View Height”. Outer
                            wall should be maximum 5 feet tall. No construction is allowed in line with the boundary walls of farmhouse(s).
                        </li>
                        <li id="paragraph" class="col-12" style="font-size: 16px; font-family: 'Arial'; text-align: justify">
                            On receiving physical possession the allottee / applicant is bound to start farming / gardening as schedule given by the Management.
                        </li>
                        <li id="paragraph" class="col-12" style="font-size: 16px; font-family: 'Arial'; text-align: justify">
                            The initial digitalized booking letter is issued free of cost and all the subsequent booking letters will be charged Rs 25,000/- per letter.
                        </li>

                    </ol>

                    <div style="font-size: 17px; font-family: 'Arial';margin-bottom:20px ;text-align:justify;margin-top:35px">
                        <b>DECLARATION:</b><br />
                        I/We have read and understood all the terms, conditions, rules and regulation outlined in the form and I hereby agree to abide by these rules and
                        regulations and any other rules introduced by “Lake View Height” from time to time and then have put my / our respective signatures /
                        thumb impression(s) on the same without any duress, coercion or pressure in any manner whatsoever.

                    </div>

                    <div style="font-size: 17px; font-family: 'Arial';margin-bottom:20px ;text-align:justify;margin-top:70px">

                         <span style="float:right;padding-right:400px"><b>Signature</b></span>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
}
