@model IEnumerable<Society.Data.Shift>
@{
    ViewBag.Title = "Manage_Shifts";
}
@if (Session["CNIC"] == null || Session["type"].ToString() == "Employee" || ViewBag.Key==false) { Response.Redirect("/Login/Login"); }
else
{
    <div style="margin: 8px 8px">
        <div class="content-wrapper" style="background-color:white">
            <form runat="server">
                <!-- Content Header (Page header) -->
                <div class="content-header">
                    <div class="container-fluid">
                        <div class="row mb-2">
                            <div class="col-sm-6">
                                <h1 class="m-0">Shift List</h1>
                            </div><!-- /.col -->
                            <div class="col-sm-6">
                                <ol class="breadcrumb float-sm-right">
                                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                                    <li class="breadcrumb-item active">Shift List</li>
                                </ol>
                            </div><!-- /.col -->
                        </div><!-- /.row -->
                    </div><!-- /.container-fluid -->
                </div>
                <!-- /.content-header -->
                <!-- Main content -->
                <!-- Content Wrapper. Contains page content -->
                <!-- Main content -->
                <section class="content">
                    <div class="container-fluid">


                        <div class="row">
                            <div class="col-md-10 offset-md-11">







                                <div class="card-tools">
                                    <a href="/Shifts/Add_Shift" class="btn btn-primary"> Add New</a>
                                </div>
                                <div class="card-tools">
                                    <a href="/Shifts/Calculate1" class="btn btn-primary"> Add member</a>
                                </div>
                                <div class="card-tools">
                                    <a href="/Shifts/Calculate" class="btn btn-primary"> Payment</a>
                                </div>
                                <div class="card-tools">
                                    <a href="/Shifts/set" class="btn btn-primary"> set</a>
                                </div>

                            </div>

                        </div>


                    </div>

                </section>
                <!-- ./start table-------------------------------------------------------------------------------------------------------------------- -->
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">DataTable with default features</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body p-0">
                        <table class="table table-striped projects" id="example1">
                            <thead>
                                <tr>
                                    <th style="width: 5%">Shift ID</th>
                                    <th style="width: 20%">Shift Name</th>
                                    <th style="width: 20%">Start Time</th>
                                    <th style="width: 20%">End Time</th>
                                    <th style="width: 20%">Work Hours</th>
                                    <th style="width: 30%">Action</th>
                                </tr>
                            </thead>

                            @foreach (var x in Model)
                            {
                                <tr>
                                    <td>@x.Shift_ID</td>
                                    <td>@x.Shift_Name</td>
                                    <td>@x.StartTime</td>
                                    <td>@x.EndTime</td>
                                    <td>@x.WorkHours</td>
                                    <td>
                                        <a class="btn btn-info btn-sm m-1" href="/Shifts/Update_Shift?ID=@x.Shift_ID"><i class="fas fa-pencil-alt"></i></a>
                                        <a href="/Shifts/Delete?id=@x.Shift_ID" onclick="return confirm('Are you sure U Want to delete Record?')" class="btn btn-danger btn-sm m-1"><i class="fas fa-trash"></i></a>
                                    </td>


                                </tr>
                            }
                        </table>
                    </div>
                </div>
            </form>
        </div>
    </div>
}
