                            tr.append("<td>" + `   <a class="btn btn-secondary btn-sm m-1" title="Preview" target="_blank" href="/Manage_Bank_Rec_Voucher/voucherpreview?VoucherNum=` + obj[i].VoucherNum + `"><i class="fas fa-eye"></i> </a>` + "</td>");
                            /**/

                            table1.row.add(tr);

                            table1.draw();

                        } else {
                            table.draw();
                            table1.draw();
                        }



                    }
                }


            });
        }


